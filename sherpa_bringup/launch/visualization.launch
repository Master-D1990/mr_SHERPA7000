<?xml version="1.0"?>
<launch>
  <!-- Arguments -->
  <arg name="rviz_config" default="$(find sherpa_description)/rviz/sherpa_octomap.rviz"/>
  <arg name="pointcloud_topic" default="/rslidar_points" doc="Topic fÃ¼r die LiDAR-Punktwolke"/>
  
  <!-- Start RViz -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(arg rviz_config)"/>

  <!-- Start robot state publisher if not already running -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
        unless="$(eval arg('running_nodes').count('/robot_state_publisher') > 0)"/>
  
  <!-- Create a simple RViz configuration specifically for LiDAR visualization -->
  <node pkg="rostopic" type="rostopic" name="check_pointcloud" 
        args="echo $(arg pointcloud_topic) -n1" output="screen"/>
</launch>