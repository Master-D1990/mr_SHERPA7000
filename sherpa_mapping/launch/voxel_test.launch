<?xml version="1.0"?>
<launch>
  <!-- Start den Octomap-Server -->
  <node pkg="octomap_server" type="octomap_server_node" name="octomap_server" output="screen">
    <param name="resolution" value="0.1" />
    <param name="frame_id" value="map" />
    <param name="sensor_model/max_range" value="5.0" />
    <!-- Wichtig: Konfiguriere den Input-Topic auf /cloud_in, den unser Python-Node verwendet -->
    <remap from="cloud_in" to="cloud_in" />
  </node>

  <!-- Start unseres einfachen Python-Nodes, der 3 Voxel verÃ¶ffentlicht -->
  <node pkg="sherpa_mapping" type="simple_voxel_publisher.py" name="simple_voxel_publisher" output="screen" />

  <!-- Start RViz mit einer Konfiguration, die OctoMap anzeigt -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find sherpa_mapping)/rviz/octomap_test.rviz" />
</launch>